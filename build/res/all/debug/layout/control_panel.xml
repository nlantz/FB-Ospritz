<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
>



    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="net.clintarmstrong.fbreader.plugin.ospritz.SpritzActivity">
        <com.andrewgiang.textspritzer.lib.SpritzerTextView
            android:id="@+id/spritzTV"
            android:ems="13"
            android:minEms="13"
            android:maxEms="13"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            app:clickControls="true"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"/>
        />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spritzTV"
            android:layout_marginTop="45dp"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seek_wpm"
                android:id="@+id/wpm_text" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarWpm"
                android:max="1000"
                android:indeterminate="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seek_text_size"
                android:id="@+id/text_size_text"
                 />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarTextSize"
                android:max="50"/>
        </LinearLayout>
    </RelativeLayout >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton android:id="@+id/button_previous_paragraph"
            android:layout_width="70dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:src="@android:drawable/ic_media_previous"
            />
        <ImageButton android:id="@+id/button_close"
            android:layout_width="70dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:src="@drawable/ic_media_stop"
            />
        <ImageButton android:id="@+id/button_settings"
            android:layout_width="70dip"
            android:layout_height="50dip"
            android:layout_weight="0"
            android:src="@android:drawable/ic_menu_preferences"
            android:onClick="launchSettings"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageButton android:id="@+id/button_next_paragraph"
            android:layout_width="70dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:src="@android:drawable/ic_media_next"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton android:id="@+id/button_play"
            android:layout_width="70dip"
            android:layout_height="50dip"
            android:layout_weight="2"
            android:src="@android:drawable/ic_media_play"
            />
        <ImageButton android:id="@+id/button_pause"
            android:layout_width="70dip"
            android:layout_height="50dip"
            android:layout_weight="2"
            android:src="@android:drawable/ic_media_pause"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>
